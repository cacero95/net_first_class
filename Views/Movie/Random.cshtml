@model first_lesson.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    // cuando se coloca un @ {} el intrepretador asigna un espacio de c# dentro del html 
    var class_name = Model.Customers.Count > 0 ? "popular" : null;
}
<h2>@Model.Movie.Name</h2>
@if (Model.Customers.Count > 0)
{
<p>Nadie ha alquilado este tipo de peliculas</p>
}
<ul>
    @foreach (var customer in Model.Customers)
    {
        <li>@customer.Name</li>
    }
</ul>
